---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import GradiantText from "../shared/GradiantText.astro";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="about" class=`relative min-h-screen py-16 md:py-20 bg-[#FAF9F5] ${className}`>
  <Container className="space-y-10 md:space-y-12">
    <div class="text-center max-w-3xl mx-auto space-y-4">
      <Title className="text-[#2C2C2C]">About Us</Title>
      <Paragraph className="text-[clamp(1rem,2vw,1.5rem)] font-light text-[#2C2C2C]">
        We are a team of passionate designers and developers who love creating beautiful and functional websites.
      </Paragraph>
    </div>

    <div class="mt-8 w-full mx-auto">
      <Paragraph className="text-center text-[#2C2C2C]">
        At KUARU STUDIO, we are passionate about creating exceptional digital experiences. 
        Our team of experts combines creativity with technical excellence to deliver 
        innovative solutions that drive business growth.
      </Paragraph>
      
      <div class="mt-8 grid gap-6 md:grid-cols-3">
        <div class="p-6 rounded-xl bg-[#FAF9F5] border border-box-border">
          <h3 class="text-xl font-semibold text-[#2C2C2C] mb-4">Our Mission</h3>
          <Paragraph>
            To empower businesses with cutting-edge digital solutions that transform 
            their online presence and drive sustainable growth.
          </Paragraph>
        </div>
        
        <div class="p-6 rounded-xl bg-[#FAF9F5] border border-box-border">
          <h3 class="text-xl font-semibold text-[#2C2C2C] mb-4">Our Vision</h3>
          <Paragraph>
            To be the leading digital innovation partner, recognized for our 
            commitment to excellence and client success.
          </Paragraph>
        </div>
        
        <div class="p-6 rounded-xl bg-[#FAF9F5] border border-box-border">
          <h3 class="text-xl font-semibold text-[#2C2C2C] mb-4">Our Values</h3>
          <Paragraph>
            We uphold integrity, foster innovation, and commit to delivering exceptional value to our clients.
          </Paragraph>
        </div>
      </div>
    </div>
  </Container>
</section>
