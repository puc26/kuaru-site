---
import Container from "../shared/Container.astro";
import Spots from "../shared/Spots.astro";
---

<section class="relative -mt-24">
  <Container>
    <div
      class="mx-auto lg:mx-0 p-5 sm:p-6 py-6 sm:py-8 max-w-5xl rounded-3xl bg-[#FAF9F5] hover:bg-[#F3F1EB] border border-box-border shadow-lg shadow-box-shadow md:divide-x divide-box-border grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-8 md:gap-6 lg:gap-12"
    >
      <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-[#2C2C2C]"
        >
          12+
        </h2>
        <p class="mt-2 text-[#2C2C2C]">Created projects</p>
      </div>

      <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-[#2C2C2C]"
        >
          200+
        </h2>
        <p class="mt-2 text-[#2C2C2C]">Projects</p>
      </div>

      <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-[#2C2C2C]"
        >
          120
        </h2>
        <p class="mt-2 text-[#2C2C2C]">Happy Client</p>
      </div>

      <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-[#2C2C2C]"
        >
          5+
        </h2>
        <p class="mt-2 text-[#2C2C2C]">Years</p>
      </div>
    </div>
  </Container>
</section>
